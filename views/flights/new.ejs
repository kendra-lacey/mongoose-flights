<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>

<form class="form-group" id="new-form" action="/flights" method="POST">
  <label for="airline-select">Airline:</label>
  <select name="airline" id="airline-select">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Spirit">Spirit</option>
    </select>
  <label for="airport-select">Airport:</label>
  <select name="airport" id="airport-select">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
    <option value="DEN">DEN</option>
    </select>
    <label for="flightNo-input" placeholder="10-9999">Flight Number:</label>
    <input type="text" name="flightNo" id="flight-no-input" autocomplete="off"> 
    <label for="departure-input">Departure:</label>
    <input type="datetime-local" name="departs" id="departure-input">
    <button type="submit">Add Flight</button>
</form>

</main>
<%- include("../partials/footer") %>