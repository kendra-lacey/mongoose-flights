<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  
  <form class="form-group" id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select" value="<%= flight.airline %>">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
      <option value="Spirit">Spirit</option>
      </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select" value="<%= flight.airport %>">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="DEN">DEN</option>
      </select>
      <label for="flightNo-input" placeholder="10-9999">Flight Number:</label>
      <input type="text" name="flightNo" id="flight-no-input" autocomplete="off" value="<%= flight.flightNo %>"> 
      <label for="departure-input">Departure:</label>
      <input type="datetime-local" name="departs" id="departure-input" value = "<%= new Date().toISOString().slice(0, -2) %>">
      <button type="submit">Save Flight</button>
  </form>
  
  </main>
  
<%- include('../partials/footer') %>